<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">All Products</a></li>
        <li><a data-toggle="tab" href="#menu1">Categories</a></li>
      </ul>
    </div>

    <div class="tab-content">
      <div id="home" class="tab-pane fade in active">
        <%= content_tag_for(:p, @products) do |product| %>
            <div class="col-sm-6 col-md-3"><br/>

              <div class="thumbnail">
                <div class="caption">
                  <p class="border_bottom"><b>Product Name: </b><%= product.product_name %></p>

                  <p class="border_bottom"><b>Available Size: </b><%= product.available_size %></p>

                  <p class="border_bottom"><b>Price: </b><%= product.price %></p>

                  <p class="border_bottom"><b>Category Id: </b><%= product.category_id %></p>

                  <p class="border_bottom"><%= pluralize(product.votes.count, "vote") %></p>
                  <% if @check_id %>
                      <p class="border_bottom"><%= button_to 'Dislike', downvote_product_path(product), method: :post %></p>
                    <% else %>
                      <p class="border_bottom"><%= button_to 'Like', upvote_product_path(product), method: :post %></p>
                  <% end %>
                </div>
                <div class="product_image_container">
                  <%= image_tag product.picture, :class => "img-responsive", :class => "image_height" %>
                </div>
              </div>
            </div>
        <% end %>

      </div>
      <div id="menu1" class="tab-pane fade">
        <%= content_tag_for(:p, @categories) do |category| %>
            <div class="col-sm-6 col-md-3"><br/>
              <div class="thumbnail">
                <div class="caption">
                  <p class="border_bottom"><b>Category Name:</b> <%= category.category_name %></p>

                  <p class="border_bottom"><b>Description:</b> <%= category.description %></p>
                  <% if category.status == "1" %>
                      <p><b>Status:</b> <span class="active_style">Active</span></p>
                  <% else %>
                      <p><b> Status:</b> <span class="inactive_style">Inactive</span></p>
                  <% end %>

                </div>
                <div class="image_container">
                  <%= image_tag category.picture, :class => "img-responsive", :class => "image_height" %>
                </div>
                <div class="caption">
                  <p>
                    <button class="btn btn-default"><%= link_to 'Products', category %></button>
                  </p>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
