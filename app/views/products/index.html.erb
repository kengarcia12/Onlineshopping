
<div class="page-header">
  <%= link_to new_product_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Product
  <% end %>
  <h1>Listing products</h1>
  <% if @products.present? %>
      <% @products %>
  <% else %>
      <p>There are no products containing the term(s) <%= params[:search] %>.</p>
  <% end %>
  <%= form_tag(products_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Products" %>
      <%= submit_tag "Search" %>
  <% end %>
</div>

<div class="row">
  <%= content_tag_for(:p, @products) do |product| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <div class="caption">
            <p class="border_bottom"><b>Product Name: </b><%= product.product_name %></p>
            <p class="border_bottom"><b>Available Size: </b><%= product.available_size %></p>
            <p class="border_bottom"><b>Price: </b><%= product.price %></p>
            <p class="border_bottom"><b>Category Id: </b><%= product.category_id  %></p>

          </div>
          <div class="product_image_container">
            <%= image_tag product.picture, :class => "img-responsive", :class=> "image_height" %>
          </div>
          <div class="caption">
            <button class="btn btn-default"> <%= link_to 'Show', product %></button>
            <button class="btn btn-default"> <%= link_to 'Edit', edit_product_path(product) %></button>
            <button class="btn btn-default"><%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?'} %></button>
          </div>
        </div>
      </div>
  <% end %>
</div>